<?xml version="1.0"?>
<block>
  <name>EventStream Source</name>
  <key>es_source</key>
  <category>[EVENTSTREAM]</category>
  <import>import es</import>
  <make>es.source($num_streams*[$type.size], $nthreads, $eb.raw, $mm.raw)</make>

  <param>
    <name>Handler Threads</name>
    <key>nthreads</key>
    <value>1</value>
    <type>int</type>
  </param>

      <param>
        <name>IO Type</name>
        <key>type</key>
        <type>enum</type>
        <option>
            <name>Complex</name>
            <key>complex</key>
            <opt>size:gr.sizeof_gr_complex</opt>
        </option>
        <option>
            <name>Float</name>
            <key>float</key>
            <opt>size:gr.sizeof_float</opt>
        </option>
        <option>
            <name>Int</name>
            <key>int</key>
            <opt>size:gr.sizeof_int</opt>
        </option>
        <option>
            <name>Short</name>
            <key>short</key>
            <opt>size:gr.sizeof_short</opt>
        </option>
        <option>
            <name>Byte</name>
            <key>byte</key>
            <opt>size:gr.sizeof_char</opt>
        </option>
    </param>


    <param>
        <name>Num Streams</name>
        <key>num_streams</key>
        <value>1</value>
        <type>int</type>
    </param>

  <param>
    <name>Early Behavior</name>
    <key>eb</key>
    <value></value>
    <type>enum</type>
    <option>
        <name>DISCARD</name>
        <key>discard</key>
        <opt>raw:0</opt>
    </option>
    <option>
        <name>BALK</name>
        <key>balk</key>
        <opt>raw:1</opt>
    </option>
    <option>
        <name>ASAP</name>
        <key>asap</key>
        <opt>raw:2</opt>
    </option>
    <option>
        <name>RNDF</name>
        <key>rndf</key>
        <opt>raw:3</opt>
    </option>
  </param>
  
  <param>
    <name>Merge Mode</name>
    <key>mm</key>
    <value></value>
    <type>enum</type>
    <option>
        <name>MEMCPY</name>
        <key>memcpy</key>
        <opt>raw:0</opt>
    </option>
    <option>
        <name>ADD_INT8S</name>
        <key>addint8s</key>
        <opt>raw:1</opt>
    </option>
    <option>
        <name>ADD_INT16S</name>
        <key>addint16s</key>
        <opt>raw:2</opt>
    </option>
    <option>
        <name>ADD_FLOATS</name>
        <key>addfloats</key>
        <opt>raw:3</opt>
    </option>
  </param>

  <sink>
    <name>schedule_event</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <source>
      <name>out</name>
      <type>$type</type>
      <vlen>1</vlen>
      <nports>$num_streams</nports>
  </source>

  <source>
      <name>nproduced</name>
      <type>message</type>
      <optional>1</optional>
  </source>

  <source>
      <name>events_scheduled</name>
      <type>message</type>
      <optional>1</optional>
  </source>

</block>
